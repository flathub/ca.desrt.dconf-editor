{
    "id": "ca.desrt.dconf-editor",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.36",
    "sdk": "org.gnome.Sdk",
    "command": "start-dconf-editor",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--talk-name=ca.desrt.dconf",
        "--filesystem=xdg-run/dconf",
        "--filesystem=host:ro",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--talk-name=org.freedesktop.Flatpak",
        "--talk-name=org.gnome.SettingsDaemon.Color"
    ],
    "modules": [
        {
            "name": "dconf-editor",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/dconf-editor/3.36/dconf-editor-3.36.0.tar.xz",
                    "sha256": "72eed05670917f8e43200e40ccc6be60211f0a87b017534eac1fd6c7173a0693"
                }
            ]
        },
        {
            "name": "scripts",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm 755 start-dconf-editor.sh /app/bin/start-dconf-editor"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "start-dconf-editor.sh"
                }
            ]
        }
    ]
}
