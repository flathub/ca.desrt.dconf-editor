{
    "id": "ca.desrt.dconf-editor",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.34",
    "sdk": "org.gnome.Sdk",
    "command": "start-dconf-editor",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--talk-name=ca.desrt.dconf",
        "--filesystem=xdg-run/dconf",
        "--filesystem=host:ro",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--talk-name=org.freedesktop.Flatpak",
        "--talk-name=org.gnome.SettingsDaemon.Color"
    ],
    "modules": [
        {
            "name": "dconf-editor",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/dconf-editor/3.34/dconf-editor-3.34.3.tar.xz",
                    "sha256": "9b491a6a9f3eecf6960b33d3992112d6adbc535fb04af50bcb6ab9a29b64028b"
                }
            ]
        },
        {
            "name": "scripts",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm 755 start-dconf-editor.sh /app/bin/start-dconf-editor"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "start-dconf-editor.sh"
                }
            ]
        }
    ]
}
